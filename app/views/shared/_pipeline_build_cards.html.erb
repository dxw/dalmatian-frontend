<div class="row mt-4">
  <% locals[:pipeline].stages.each do |stage| %>
    <div class="col-sm-12 col-md-6 col-lg-4">
      <div class="card mb-4 stage-<%= stage.name.downcase %>">
        <h5 class="card-header"><%= stage.name %></h5>
        <div class="card-body">
          <h5 class="card-title">Actions</h5>
          <% stage.actions.each do |action| %>
            <div class="card mb-4 build-card <%= action.card_class %>" style="width: 18rem; mb-4">
              <div class="card-body">
                <h5 class="card-title"><%= action.name %></h5>
                <h6 class="card-subtitle mb-2 text-muted"><%= action.last_time %></h6>
                <p class="card-text"><%= action.last_status %></p>
                <p class="card-text"><%= action.last_summary %></p>
                <% if action.last_external_execution_url %>
                  <%= link_to "View in AWS", action.last_external_execution_url, target: "_blank", class: "card-link" %>
                <% end %>
                <% if action.revision_url %>
                  <%= link_to "View revision", action.revision_url, target: "_blank", class: "card-link" %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
